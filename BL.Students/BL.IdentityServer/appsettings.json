{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDbConfig": {
    "Name": "bl-exercise",
    "Host": "localhost",
    "Port": 27017
  },
  "IdentityServerSettings": {
    "Clients": [
      {
        "ClientId": "client",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "RequireClientSecret": false,
        "RedirectUris": [
          "urn:ietf:wg:oauth:2.0:oob",
          "https://localhost:62619/signin-oidc"
        ],
        "AllowedScopes": [
          "openid",
          "profile",
          "api.read"
        ],
        "AlwaysIncludeUserClaimsInIdToken": true,
        "AllowOfflineAccess": true
      }
    ],
    "ApiScopes": [
      {
        "Name": "api.read"
      }
    ],
    "ApiResources": [
      {
        "Name": "myApi",
        "Scopes": [
          "api.read"
        ],
        "UserClaims": [
          "role"
        ]
      }
    ]
  }
}
